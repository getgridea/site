/**
  * Home Style
  */
.hve-home
  table {
    display: table;
  }
  div[class*="language-"] {
    border-radius: 2px;
  }

  .hero
    img
      width 120px
      height 120px

  .feature
    h2
      font-size 18px
      margin: 24px 0 8px

.content:not(.custom)
    & > h1, h2, h3, h4, h5, h6
      margin-bottom: 24px;
  .navbar
    border-bottom 0px solid!important;
    box-shadow: 0 2px 3px rgba(21, 39, 57, 0.12);
    background: #f9d654;
    color #434343;
    .links
      background: #f9d654

  .nav-links a:hover, .nav-links a.router-link-active
    color #000000

.home
  padding 0 0 0
  max-width none
  .hero
    padding 7.6rem 2rem
    // background: #f9f7f3;  /* fallback for old browsers */
    // background: linear-gradient(to bottom, #f3f7f9, #f9f7f3); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    background #fcd73b

    &:before
      content: '';
      display: block;
      background-color: rgba(223, 228, 231, 0.05);
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;

    h1
      color: #434343
    .description
      color #434343
      line-height: 1.5
  .features, .content.custom
    margin: 0 auto
    max-width: 960px
    border-top: none

  @media (max-width: 419px)
    .hero
      padding: 3.5rem 1.5rem
      background-size: 90%
      background-position: 560%
    .features, .content.custom
      padding-left: 1.5rem
      padding-right: 1.5rem

.search-box input
  border-radius: 4px
  border: none
  background-color: #f9f7f3

.navbar .site-name
  color #434343
  position relative
  transform: translateX(46px)
  &:after
    content ''
    display: block
    width 40px
    height 40px
    background-image url('/gridea.png')
    background-size 100%
    position: absolute
    left: -46px
    top: -3px
.sidebar
  background-color #f9f7f3
