/**
  * Home Style
  */
.gridea-home
  table {
    display: table;
  }
  div[class*="language-"] {
    border-radius: 2px;
  }

  .hero
    img
      width 120px
      height 120px

  .feature
    h2
      font-size 18px
      margin: 24px 0 8px
.gridea-home
  .navbar
    padding: 0.7rem 80px;
    .links
      right: 80px;

.content:not(.custom)
    & > h1, h2, h3, h4, h5, h6
      margin-bottom: 24px;
  .navbar
    background: rgba(255, 255, 255, 0.9)
    backdrop-filter: saturate(180%) blur(20px)
    border-bottom: none
    color #434343;
    .links
      background: transparent

  .nav-links a:hover, .nav-links a.router-link-active
    color #000000

@media (min-width: 719px) {
  .dropdown-wrapper .dropdown-title .arrow {
    border-top-color: #8c7830;
  }
}

.hero-bg {
  transform: translateX(35%) rotate(-6deg);
  border-top-left-radius: 59%;
  border-top-right-radius: 52%;
  border-bottom-left-radius: 59%;
  border-bottom-right-radius: 56%;
  overflow: hidden;
}

@media (min-width: 719px) {
  .nav-item > a:not(.external):hover, .nav-item > a:not(.external).router-link-active {
    border-bottom: none;
    position: relative;
    &:after {
      content: '';
      display: block;
      width: 12px;
      height: 2px;
      border-radius: 2px;
      background: #434343;
      position: absolute;
      left: 50%;
      bottom: -4px;
      transform: translateX(-50%);
    }
  }
}


